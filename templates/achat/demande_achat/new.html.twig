{% extends 'main_layout.html.twig' %}

{% block breadcrumb %}
    <nav class="page-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Demande d'achat</a></li>
            <li class="breadcrumb-item active" aria-current="page">Saisie</li>
        </ol>
    </nav>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nouvelle demande</h4>
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.motif) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.fournisseur) }}
                    </div>

                    <div class="form-group">
                        <label>Détails de la demande d'achat</label>
                        <div id="details_collection_wrapper">
                            {{ form_widget(form.detailsDemandeAchats) }}
                        </div>
                        <button type="button" class="btn btn-primary" id="add-detail">Ajouter un détail</button>
                    </div>

                    <button class="btn btn-primary" type="submit">Soumettre</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        const detailsCollection = document.getElementById('details_collection_wrapper');
        const addDetailButton = document.getElementById('add-detail');

        addDetailButton.addEventListener('click', function() {
            let newDetailForm = detailsCollection.dataset.prototype;
            newDetailForm = newDetailForm.replace(/__name__/g, detailsCollection.children.length);
            detailsCollection.insertAdjacentHTML('beforeend', newDetailForm);
        });
    </script>
{% endblock %}
